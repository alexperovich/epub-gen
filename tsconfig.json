{
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "lib":[
            "es2015",
            "dom"
        ],
        "target": "es6",
        "sourceMap": true
    }
}